<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Info"
      internalLogFile="C:\inetpub\wwwroot\nlog-internal.log">

  <extensions>
    <add assembly="AWS.Logger.NLog" />
  </extensions>

  <targets async="true">
    <!-- AWS CloudWatch Target -->
    <target name="aws" xsi:type="AWSTarget"
            logGroup="appeals-ecs-log-group"
            region="eu-west-2"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message}${when:when=length('${exception}')>0:Inner=${newline}${exception:format=tostring}}${when:when=length('${aspnet-request-url}')>0:Inner=${newline}URL: ${aspnet-request-url}}${when:when=length('${aspnet-request-ip}')>0:Inner=${newline}IP: ${aspnet-request-ip}}" />

    <!-- Console Target -->
    <target name="console" xsi:type="ColoredConsole"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message}${when:when=length('${exception}')>0:Inner=${newline}${exception:format=tostring}}" />

    <!-- File Target -->
    <target name="file" xsi:type="File"
            fileName="C:\inetpub\wwwroot\nlog-application.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message}${when:when=length('${exception}')>0:Inner=${newline}${exception:format=tostring}}"
            archiveFileName="${basedir}/logs/archive/nlog-${shortdate}.{##}.log"
            archiveNumbering="Date"
            archiveEvery="Day"
            maxArchiveFiles="30" />

    <!-- Error File Target -->
    <target name="errorFile" xsi:type="File"
            fileName="${basedir}/logs/error-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message}${when:when=length('${exception}')>0:Inner=${newline}${exception:format=tostring}}"
            archiveFileName="${basedir}/logs/archive/error-${shortdate}.{##}.log"
            archiveNumbering="Date"
            archiveEvery="Day"
            maxArchiveFiles="30" />
  </targets>

  <rules>
    <!-- Log everything to AWS and Console -->
    <logger name="*" minlevel="Debug" writeTo="aws,console" />
    
    <!-- Log everything to file -->
    <logger name="*" minlevel="Info" writeTo="file" />
    
    <!-- Log errors to separate file -->
    <logger name="*" minlevel="Error" writeTo="errorFile" />
  </rules>
</nlog>
