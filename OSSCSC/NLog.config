<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      throwConfigExceptions="true"
      internalLogLevel="Trace"
      internalLogFile="C:\inetpub\wwwroot\nlog-internal.txt">

  <extensions>
    <add assembly="AWS.Logger.NLog" />
  </extensions>

  <targets async="true">
    <!-- AWS CloudWatch Target -->
    <target name="aws" xsi:type="AWSTarget" logGroup="appeals-ecs-log-group" region="eu-west-2" />
    <target name="file" xsi:type="File" fileName="C:\inetpub\wwwroot\nlog-application.log" />
  </targets>

  <rules>
    <logger name="*" minlevel="Debug" writeTo="aws" />
    <logger name="*" minlevel="Debug" writeTo="file" />
  </rules>
</nlog>
